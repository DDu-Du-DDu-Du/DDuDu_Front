{
  "extends": [
    "next/core-web-vitals",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended",
    "plugin:storybook/recommended"
  ],
  "parserOptions": {
    "parser": "@typescript-eslint/parser"
  },

  "ignorePatterns": ["postcss.config.js", "!/.storybook"],
  "rules": {
    "prettier/prettier": [
        "error",
        {
            "endOfLine": "auto"
        }
    ]
  }
}
